doctype html
mat-progress-bar(mode="indeterminate", *ngIf="isLoading")

mat-sidenav-container
  mat-sidenav(#snav, [mode]="device.isMobile() ? 'over' : 'side'", [fixedInViewport]="device.isMobile()",  [opened]="!device.isMobile()")
    mat-toolbar
      //a(href="/user/market")
      a(routerLink="/market", routerLinkActive="active")
        img(src="../../../../assets/images/logo.png")
      //mat-icon.logo extension
      //span 
      //  | GENIE
      //  br
      //  | FOOTBALL
      //.flex-space
    mat-nav-list
      ul
        li 
          //a(href="/user/market")
          a(routerLink="/market", routerLinkActive="active")
            //mat-icon pie_chart
            i(icon="../../../../assets/images/icons/__market.png")
            span MARKET VIEW
        li 
          a(routerLink="/players/filter", routerLinkActive="active")
            //mat-icon layers
            i(icon="../../../../assets/images/icons/__data.png")

            span PLAYERS

      ul
        li 
          a(href="/user/profile")
            //mat-icon person_outline
            i(icon="../../../../assets/images/icons/__user.png")
            span PROFILE
        li
          a(href="/user/logout")
            //mat-icon fingerprint
            i(icon="../../../../assets/images/icons/__logout.png")
            span LOGOUT

  mat-sidenav-content
    mat-toolbar
      button(mat-icon-button, (click)="snav.toggle()")
        mat-icon menu
    
    router-outlet